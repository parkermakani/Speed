###########################################

# ---- General Environment ----
ENV=development  # set to "production" on Replit

# ---- Backend Secrets ----
MAPBOX_TOKEN=YOUR_MAPBOX_ACCESS_TOKEN_HERE
ADMIN_PASSWORD=CHANGE_ME_ADMIN_PASSWORD
JWT_SECRET=CHANGE_ME_SUPER_SECRET_JWT
GOOGLE_PLACES_API_KEY=YOUR_GOOGLE_PLACES_API_KEY

# ---- Firebase (Shared) ----
# Client SDK config
VITE_FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
VITE_FIREBASE_AUTH_DOMAIN=YOUR_FIREBASE_AUTH_DOMAIN
VITE_FIREBASE_PROJECT_ID=YOUR_FIREBASE_PROJECT_ID
VITE_FIREBASE_STORAGE_BUCKET=YOUR_FIREBASE_STORAGE_BUCKET
VITE_FIREBASE_MESSAGING_SENDER_ID=YOUR_MESSAGING_SENDER_ID
VITE_FIREBASE_APP_ID=YOUR_FIREBASE_APP_ID

# Set to 'true' locally to shuffle cities order in UI so real tour order isn't leaked in dev
VITE_SHUFFLE_CITIES=false

# Backend service account credentials (absolute path)
FIREBASE_SERVICE_ACCOUNT_JSON=/absolute/path/to/serviceAccount.json

# ---- Frontend (Vite) ----
VITE_MAPBOX_TOKEN=$MAPBOX_TOKEN
VITE_API_BASE_URL=http://localhost:8000
